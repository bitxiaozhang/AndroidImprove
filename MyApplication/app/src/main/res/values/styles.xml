<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" >
        <!-- Customize your theme here. -->
    </style>
    <style name="login_label_text_style">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/login_text_color</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="main_button_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/main_button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button_main_background</item>
    </style>
</resources>
