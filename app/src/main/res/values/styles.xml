<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" >
        <!-- Customize your theme here. -->
    </style>
    <style name="login_label_text_style">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/login_text_color</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="main_button_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/main_button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button_main_background</item>
    </style>

    <style name="item_left_title_style">
        <item name="android:textColor">@color/main_item_text_color</item>
        <item name="android:textSize">@dimen/item_text_size_middle</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/common_margin_middle</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="item_parent_style">
        <item name="android:background">@drawable/selector_common_item</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
